<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tonikamitv.loginregister">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/finalbl11"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:parentActivityName=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".Login" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:parentActivityName=".Login" />
        <activity
            android:name=".CreateGroup"
            android:label="@string/title_activity_create_group"
            android:parentActivityName=".Login" />
        <activity
            android:name=".Question"
            android:label="@string/title_activity_question"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QuestionFetch"
            android:label="@string/title_activity_question_fetch"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VoteResult"
            android:label="@string/title_activity_vote_result"></activity>
    </application>

</manifest>
